@model RouteTicket

@if (Model.Ticket == null)
{
    <h5 class="container display-5 mt-3"><i class="fa-solid fa-road-circle-exclamation"></i> Lütfen PRN Numaranızı kontrol edip tekrar deneyiniz.</h5>
}
else
{

    <h3 class="text-center mt-4">Your Ticket</h3>
    <br />

    <div class="ticket container col-md-12">
        <div class="left my-3 mx-1 col-md-8">
            <div>
                <img src="/img/map.jpg" alt="Alternate Text" />
            </div>
            <div class="ticket-info">
                <p class="date">
                    <span>DATE</span>
                    <span class="june-29">@Model.Date</span>
                    <span><small class="text-muted">Time: @Model.Time</small></span>
                </p>
                <div class="show-name">
                    <h1>Costumer: </h1>
                    <h2>@Model.Ticket.CostumerName @Model.Ticket.CosturmerSurname</h2>
                </div>
                <div class="time">
                    <p>Price:<span> ₺@Model.Ticket.Price</span></p>
                    <p>Seat Number: <span>*</span>@Model.Ticket.SeatNumber</p>
                </div>
                <p class="location">
                    <span>@Model.Ticket.TravelFrom</span>
                    <span class="separator"><i class="fa-solid fa-person-walking-luggage"></i></span><span>@Model.Ticket.TravelTo</span>
                </p>
            </div>
        </div>
        <div class="right col-md-4">
            <div class="right-info-container">
                <div class="barcode">
                    <img class="mt-3" src="https://external-preview.redd.it/cg8k976AV52mDvDb5jDVJABPrSZ3tpi1aXhPjgcDTbw.png?auto=webp&s=1c205ba303c1fa0370b813ea83b9e1bddb7215eb" alt="QR code">
                    <p class="ticket-number text-center">
                        PRN NUMBER: #@Model.Ticket.PeronNumber
                    </p>    
                </div>

            </div>
        </div>
    </div>
}



